{
  "compilerOptions": {
     "module": "esnext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "outDir": "./dist",
    "target": "es2016",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "global.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
