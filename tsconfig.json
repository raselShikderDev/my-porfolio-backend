{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",                // <-- add this
    "moduleResolution": "node",        // <-- or "bundler" (if using Vite/Next.js)
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,         // <-- helps with asset imports
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "global.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
