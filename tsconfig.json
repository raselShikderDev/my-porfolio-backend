{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "moduleDetection": "auto",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true, // optional, helps with default imports

    // Best practices
    "strict": true,
    "skipLibCheck": true
  }
}
